{
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.js",
    "**/tests/**/*.spec.js"
  ],
  "collectCoverageFrom": [
    "server.js",
    "public/js/**/*.js",
    "!node_modules/**",
    "!public/js/libs/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testTimeout": 10000
}
